<Window x:Class="StoreAdmin.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreAdmin.Views"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontSize="32">Vendor</Label>
        <TextBox FontSize="32" Text="{Binding car.Vendor}"></TextBox>
        
        <Label FontSize="32">Model</Label>
        <TextBox FontSize="32" Text="{Binding car.Model}"></TextBox>
        
        <Label FontSize="32">Year</Label>
        <TextBox FontSize="32" Text="{Binding car.Year}" MaxLength="4"></TextBox>

        <Button FontSize="32" Command="{Binding saveCommand}">Save</Button>
    </StackPanel>
</Window>
